#cfg -a WPA_IS_HEX=${WPA_IS_HEX:="0"}
#cfg -a WPA_IS_HEX_2=${WPA_IS_HEX_2:="0"}
#cfg -a WPA_IS_HEX_3=${WPA_IS_HEX_3:="0"}
#cfg -a WPA_IS_HEX_4=${WPA_IS_HEX_4:="0"}
#cfg -a WPA_IS_HEX_5=${WPA_IS_HEX_5:="0"}
