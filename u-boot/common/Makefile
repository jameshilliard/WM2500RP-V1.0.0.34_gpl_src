ifeq ($(BOARD), wnr1000v4)
COBJS	+= cmd_ethreg.o flash.o cmd_pll.o cmd_fls.o cmd_ddr.o
endif

ifeq ($(BOARD), wnr1100)
COBJS	+= cmd_ethreg.o flash.o cmd_pll.o cmd_fls.o cmd_ddr.o
endif

ifeq ($(BOARD), wnr2000v3)
COBJS	+= cmd_ethreg.o flash.o cmd_pll.o cmd_fls.o cmd_ddr.o
