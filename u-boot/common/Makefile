# wndr3800 and wndrmacv2
ifeq ($(BOARD), hw29763654p16p128)
COBJS	+= cmd_ethreg.o flash.o cmd_pll.o cmd_fls.o cmd_ddr.o
endif

# wndr3700v2 and wndrmacv1
ifeq ($(BOARD), wndr3700v1h2)
