    default "x6200"

config TARGET_BOARD_HW_ID
    string "Define the board hw id"
    depends TARGET_x6200
    default "2976436100+128+128"

config TARGET_FW_VERSION
    string "Define the firmware version"
    depends TARGET_x6200
    default "V0.0.0.1"

