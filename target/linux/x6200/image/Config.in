    string "Define the magic number for the firmware"
    depends TARGET_x6200
    default "0x36323030"

config TARGET_HEAD_LENGTH
    string "Define the length of firmware header."
    depends TARGET_x6200
    default "128"

config TARGET_KERNEL_SIZE
    string "Define the kernel size of firmware"
    depends TARGET_x6200
    default "1152k"

config TARGET_MAX_KERNEL_SIZE
    string "Define the max kernel size of firmware"
    depends TARGET_x6200
    default "1179648"

config TARGET_MAX_IMAGE_SIZE
    string "Define the max image size of firmware"
    depends TARGET_x6200
    default "25034752"
